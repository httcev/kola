<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <!-- REST PLUGIN CONFIG -->
    <constant name="struts.action.extension" value="xhtml,,xml,json,action"/>
    <constant name="struts.mapper.class" value="org.apache.struts2.dispatcher.mapper.PrefixBasedActionMapper" />
    <constant name="struts.mapper.prefixMapping" value="/api:rest,:struts"/>
    <constant name="struts.convention.action.suffix" value="Controller"/>
    <constant name="struts.convention.action.mapAllMatches" value="true"/>
    <constant name="struts.convention.default.parent.package" value="rest-default"/>
    <!-- 
    <constant name="struts.convention.package.locators" value="example"/>
     -->

    <include file="api.xml"/>

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index"/>
        
        <action name="index">
            <result type="redirectAction">
                <param name="actionName">HelloWorld</param>
                <param name="namespace">/example</param>
            </result>
        </action>

        <action name="HelloWorld" class="de.httc.kola.example.HelloWorld">
            <result>/WEB-INF/example/HelloWorld.jsp</result>
        </action>

        <action name="Login_*" method="{1}" class="de.httc.kola.example.Login">
            <result name="input">/WEB-INF/example/Login.jsp</result>
            <result type="redirectAction">Menu</result>
        </action>

        <action name="*" class="de.httc.kola.example.ExampleSupport">
            <result>/WEB-INF/example/{1}.jsp</result>
        </action>

    </package>

    <!-- Add additional packages and configuration here. -->
</struts>
